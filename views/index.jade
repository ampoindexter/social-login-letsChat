doctype html(lang='en')
html
  head
    meta(charset='UTF-8')
    title Social Login
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css' rel='stylesheet')
    link(href='css/style.css', rel='stylesheet')
  body(ng-app='socialLogin')
    div(ng-controller='navCtrl')
      button(ui-sref='home' class="btn btn-primary") home

      span(ng-if='!isAuthenticated()')
        button(ui-sref='login' class="btn btn-info") login

      span(ng-if='isAuthenticated()')
        button(ui-sref='profile' class="btn btn-info") profile
        button(ng-click='logout()' class="btn btn-warning") logout

    ui-view

    script(src='vendor/jquery/dist/jquery.min.js')
    script(src='vendor/angular/angular.js')
    script(src='vendor/angular-ui-router/release/angular-ui-router.min.js')
    script(src='vendor/satellizer/satellizer.min.js')
    script(src='js/module.js')
    script(src='js/controllers/login.js')
    script(src='js/controllers/profile.js')
    script(src='js/controllers/nav.js')
